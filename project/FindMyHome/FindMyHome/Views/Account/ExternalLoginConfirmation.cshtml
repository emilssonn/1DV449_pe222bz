@model FindMyHome.Domain.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registrera";
}

<div class="col-xs-12">

    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Välj användarnamn</legend>
            <p>
                Din autentisering med <strong>@ViewBag.ProviderDisplayName</strong> lyckades.
                    Vänligen ange ett användarnamn som komemr användas på denna sida och klicka på "Registrera" knappen nedan för att fullfölja registreringen.
            </p>
            <div class="row">
                <div class="form-group col-sm-4 col-xs-12">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            @Html.HiddenFor(m => m.ExternalLoginData)
            <button type="submit" class="btn btn-success">Registrera</button>
        </fieldset>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>

