@model FindMyHome.Domain.RegisterModel
@{
    ViewBag.Title = "Skapa ett konto";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Uppgifter</legend>

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, "Användarnamn")

            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
           @Html.LabelFor(m => m.Password, "Lösenord")

            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <div class="form-group">
           @Html.LabelFor(m => m.ConfirmPassword, "Bekräfta lösenord")

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-default">Registrera</button>

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
