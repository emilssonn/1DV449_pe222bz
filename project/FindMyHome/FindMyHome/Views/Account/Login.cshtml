@model FindMyHome.Domain.LoginModel

@{
    ViewBag.Title = "Logga in";
}

<section>


@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, "Användarnamn")

            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Lösenord")

            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe, "Kom ihåg mig?")
        </div>

        <button type="submit" class="btn btn-default">Logga in</button>

    </fieldset>
    <p>
        @Html.ActionLink("Registrera", "Register") dig om du inte har ett konto.
    </p>
}
</section>

<section>
    <h2>Logga in genom en extern tjänst</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
