@{
    ViewBag.Title = "Sidan hittades inte";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Sidan hittades inte</h1>
        <p>Det gick inte att hitta sidan: @ViewBag.RequestedUrl</p>

        @if (ViewBag.ReferrerUrl != null) {
            <p>
                Gå tillbaka till <a href="@ViewBag.ReferrerUrl">föregående sida</a>.
            </p>
        }
        else {
            <p>
                Gå tillbaka till @Html.ActionLink("startsidan", "Index", "Home").
            </p>
        }
    </div>
</div>

@* Error page must be longer than 512 bytes for IE and Chrome to show it. 
   So add padding in case we're short. *@
@(new string(' ', 512))